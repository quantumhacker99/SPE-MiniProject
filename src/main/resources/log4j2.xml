<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
  <Appenders>
    <Console name="ConsoleAppend" target="SYSTEM_OUT">
      <PatternLayout pattern=" %d{dd/MMM/yyy:HH:mm:ss SSS}[%t] %-5level %logger{36} - %msg%n"/>
    </Console>

    <File name="FileAppend" fileName="scicalc.log" immediateFlush = "false" append = "true">
      <PatternLayout pattern="%d{dd/MMM/yyy:HH:mm:ss SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </File>

  </Appenders>
  <Loggers>
    <Root level="debug">
      <AppenderRef ref="ConsoleAppend"/>
      <AppenderRef ref = "FileAppend"/>
    </Root>
  </Loggers>
</Configuration>





